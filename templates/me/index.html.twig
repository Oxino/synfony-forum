{% extends 'base.html.twig' %}

{% block title %}Mon profil
{% endblock %}

{% block body %}
	<h1>Mon profil</h1>
	<div class="row mt-4">
		<div class="col-12 col-md-3 rounded bg-light p-102 mb-5 mb-md-0 m">
			<a class="btn btn-outline-danger mb-3 mt-2" href=" {{ path('authentication-logout') }} ">Déconnexion</a>
			<h3 class="mb-3">Modifier mon profil</h3>
			{{ form_start(userForm) }}
			{{ form_row(userForm.firstname) }}
			{{ form_row(userForm.lastname) }}
			{{ form_row(userForm.username) }}
			{{ form_row(userForm.address) }}
			{{ form_row(userForm.zip_code) }}
			{{ form_row(userForm.phone_number) }}
			<button type="submit" class="btn btn-primary mb-4 mb-md-0">Mettre a jour</button>
			{{ form_end(userForm) }}
			<h3 class="mt-3">Vous souhaitez nous quitter ?</h3>
			<a href=" {{ path('me-close') }} " class=" btn btn-danger">Cloturer mon compte</a>
		</div>
		<div class="col pl-2">
			<h3 class="w-100">Les tickets que vous avez crées</h3>
			{% for ticket in tickets %}
				{% include '_partials/ticket/card.html.twig' with {ticket: ticket} only %}
			{% endfor %}
			<h3 class="mt-3 w-100">Les réponces que vous avez données</h3>
			{% for answer in answers %}
				{% include '_partials/answer/answer.html.twig' with {answer: answer} only %}
			{% endfor %}
		</div>
	</div>
{% endblock %}
